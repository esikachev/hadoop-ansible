# -*- mode: ruby -*-

Vagrant.configure(2) do |config|
  config.vm.box = "aws"
  config.ssh.username = "centos"
  config.vm.synced_folder ".", disabled: true

  
  config.vm.define "hadoop_master" do |hadoop_master|
    hadoop_master.vm.hostname = "hadoopmaster"
    hadoop_master.vm.provider :aws do |aws, override|
       aws.access_key_id = ENV['AWS_ACCESS_KEY']
       aws.secret_access_key = ENV['AWS_SECRET_KEY']
       aws.region = "us-west-1"
       aws.availability_zone = "us-west-1b"
       aws.subnet_id = "subnet-1d46ee79"
       aws.associate_public_ip = true

       aws.ami =  "ami-f5d7f195"
       aws.keypair_name = "aws-esikachev"
       aws.instance_type = "t2.micro"
       aws.security_groups = ["sg-5fb6a638"]
      override.ssh.username = "root"
      override.ssh.private_key_path = ENV['AWS_PRIVATE_KEY']
    end
  end

  config.vm.define "hadoop_slave1" do |hadoop_slave1|
    hadoop_slave1.vm.hostname = "hadoopslave1"
    hadoop_slave1.vm.provider :aws do |aws, override|
       aws.access_key_id = ENV['AWS_ACCESS_KEY']
       aws.secret_access_key = ENV['AWS_SECRET_KEY']
       aws.region = "us-west-1"
       aws.availability_zone = "us-west-1b"
       aws.subnet_id = "subnet-1d46ee79"
       aws.associate_public_ip = true

       aws.ami =  "ami-f5d7f195"
       aws.keypair_name = "aws-esikachev"
       aws.instance_type = "t2.micro"
       aws.security_groups = ["sg-5fb6a638"]
      override.ssh.username = "root"
      override.ssh.private_key_path = ENV['AWS_PRIVATE_KEY']
    end
  end

  config.vm.define "hadoop_slave2" do |hadoop_slave2|
    hadoop_slave2.vm.hostname = "hadoopslave2"
    hadoop_slave2.vm.provider :aws do |aws, override|
       aws.access_key_id = ENV['AWS_ACCESS_KEY']
       aws.secret_access_key = ENV['AWS_SECRET_KEY']
       aws.region = "us-west-1"
       aws.availability_zone = "us-west-1b"
       aws.subnet_id = "subnet-1d46ee79"
       aws.associate_public_ip = true

       aws.ami =  "ami-f5d7f195"
       aws.keypair_name = "aws-esikachev"
       aws.instance_type = "t2.micro"
       aws.security_groups = ["sg-5fb6a638"]
      override.ssh.username = "root"
      override.ssh.private_key_path = ENV['AWS_PRIVATE_KEY']
    end

    hadoop_slave2.vm.provision :ansible do |ansible|
      ansible.inventory_path = "cluster.yml"
      ansible.verbose = "v"
      ansible.sudo = false
      ansible.playbook = "site.yml"
      ansible.limit = "hadoop_slaves"
    end
  end
  
end
